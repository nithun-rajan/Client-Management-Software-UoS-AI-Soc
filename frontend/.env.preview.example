# Estate Agent CRM - Frontend Preview Environment Configuration
# This file contains environment variables for Vercel preview deployments
# These are automatically configured via Vercel project settings

# =============================================================================
# Environment
# =============================================================================

# Preview environments are always set to 'preview'
VITE_ENVIRONMENT=preview

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL - should point to Railway preview deployment
# This is automatically configured via Vercel environment variables
# Format: https://your-backend-pr-XXX.railway.app
# VITE_API_URL is injected via Vercel project settings

# Example (will be replaced by actual Railway preview URL):
# VITE_API_URL=https://estate-agent-crm-backend-pr-123.railway.app

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable preview-specific features
VITE_ENABLE_DEV_TOOLS=true

# Enable debug mode in preview for easier testing
VITE_DEBUG_MODE=true

# Show preview banner to indicate this is not production
VITE_SHOW_PREVIEW_BANNER=true

# =============================================================================
# Authentication & Security
# =============================================================================

# Auth token storage key
VITE_AUTH_TOKEN_KEY=crm_auth_token_preview

# Session timeout in minutes
VITE_SESSION_TIMEOUT=30

# Enable CORS credentials
VITE_ENABLE_CREDENTIALS=true

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Disable production analytics in preview
VITE_ENABLE_ANALYTICS=false

# Enable error tracking for preview (use separate project/environment)
VITE_ENABLE_ERROR_TRACKING=false

# Sentry DSN for preview environment (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn-for-preview

# =============================================================================
# Preview-Specific Settings
# =============================================================================

# Preview environment identifier (e.g., pr-123)
# Automatically set by deployment workflow
# VITE_PREVIEW_ID=pr-$PR_NUMBER

# Branch name for this preview
# VITE_BRANCH_NAME=$BRANCH_NAME

# Commit SHA for this preview
# VITE_COMMIT_SHA=$GITHUB_SHA

# =============================================================================
# UI Configuration
# =============================================================================

# App title for preview
VITE_APP_TITLE=Estate Agent CRM (Preview)

# Show version info in preview
VITE_SHOW_VERSION=true

# Enable mock data for testing (optional)
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# Performance & Caching
# =============================================================================

# Service worker (disabled in preview to avoid caching issues)
VITE_ENABLE_SERVICE_WORKER=false

# Cache TTL in seconds (shorter for preview)
VITE_CACHE_TTL=300

# =============================================================================
# External Services
# =============================================================================

# Map API key (use development/test key for preview)
# VITE_GOOGLE_MAPS_API_KEY=your-test-api-key

# Third-party integrations (disabled or sandboxed in preview)
# VITE_STRIPE_PUBLIC_KEY=pk_test_your-test-key
